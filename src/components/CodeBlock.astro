---
export interface Props {
  language?: string;
  title?: string;
}

const { language = 'python', title } = Astro.props;
---

<div class="code-block">
  {title && <div class="code-header">{title}</div>}
  <pre class={`language-${language}`}><code><slot /></code></pre>
</div>

<style>
  .code-block {
    margin: 1.5rem 0;
    border-radius: 0.75rem;
    overflow: hidden;
    background: #1e293b;
    border: 1px solid #334155;
  }

  .code-header {
    background: #334155;
    color: #e2e8f0;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-bottom: 1px solid #475569;
  }

  pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1.5rem;
    margin: 0;
    overflow-x: auto;
    font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', monospace;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  code {
    font-family: inherit;
  }
</style>